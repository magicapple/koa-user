{
  "verbose": true,
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "env": {
    "NODE_ENV": "development",
    "DEBUG" : "koa2-user:*"
  },
  "ext": "js json",
  "execMap": {
    "js": "node --inspect",
    "rb": "ruby",
    "pde": "processing --sketch={{pwd}} --run"
  }
}