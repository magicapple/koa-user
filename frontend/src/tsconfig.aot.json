{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true
    },
    "lib": [
        "es2015",
        "dom"
    ],
    "typeRoots": [
        "node_modules/@types"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "ts/**/*.spec.ts",
        "ts/**/*.e2e.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true
    },
    "angularCompilerOptions": {
        "genDir": "aotCompiled/",
        "skipMetadataEmit": true
    }

}
